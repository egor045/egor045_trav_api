# Ubuntu user data for AWS

sudo apt-get -y install software-properties-common
sudo apt-add-repository -y ppa:ansible/ansible
sudo apt update
sudo apt-get -y upgrade
sudo apt-get -y install python
sudo apt-get -y install ansible

# Pull /etc/ansible contents from Github
sudo curl https://raw.githubusercontent.com/ansible/ansible/devel/contrib/inventory/ec2.py -o /etc/ansible/ec2.py
sudo curl https://raw.githubusercontent.com/ansible/ansible/devel/contrib/inventory/ec2.ini -o /etc/ansible/ec2.ini
